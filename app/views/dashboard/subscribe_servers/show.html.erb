<div class="flex flex-col gap-4">
  <p style="color: green"><%= notice %></p>

  <%= render @subscribe_server %>

  <div class="flex flex-col gap-4">
    <div>
      <%= link_to "Edit this subscribe server", edit_dashboard_subscribe_server_path(@subscribe_server), class: "underline hover:text-cyan-500 visited:text-purple-600" %> |
      <%= link_to "Back to subscribe servers", dashboard_subscribe_servers_path, class: "underline hover:text-cyan-500 visited:text-purple-600" %>
    </div>

    <%= button_to "Destroy this subscribe server", [:dashboard, @subscribe_server], method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "border-solid border-2 border-slate-950 bg-red-500 text-white p-2" %>
  </div>
</div>
